#session
  = image_tag('logo_light.svg')
  .panel
    .panel-header
      %h2
        = t('views.passwords.edit.title')
    .panel-body
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.hidden_field :reset_password_token
        .field
          = f.password_field :password, autocomplete: 'off', placeholder: t('activerecord.attributes.user.password')
        .field
          = f.password_field :password_confirmation, autocomplete: 'off', placeholder: t('activerecord.attributes.user.password_confirmation')
        .actions
          = f.submit t('views.passwords.edit.button')
    = render 'devise/shared/links'
