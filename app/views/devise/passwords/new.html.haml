#session
  = image_tag('logo_light.svg')
  .panel
    .panel-header
      %h2
        = t('views.passwords.new.title')
    .panel-body
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .field
          = f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email')
        .actions
          = f.submit t('views.passwords.new.button')
    = render 'devise/shared/links'
