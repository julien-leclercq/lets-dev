= form_for [:manager, @team] do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manager_team.errors.count, "error")} prohibited this manager_team from being saved:"
      %ul
        - @manager_team.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :name, autofocus: true, placeholder: 'Name'
  .field
    = f.text_area :description, placeholder: 'Description'

  .actions
    = f.submit 'Save'
